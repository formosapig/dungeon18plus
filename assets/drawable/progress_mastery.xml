<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#D0D0D0"/>
            <solid android:color="#80000000"/>
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <clip>
            <shape>

                <gradient
                    android:angle="270"
                    android:centerColor="#006060"
                    android:centerY="0.75"
                    android:endColor="#008080"
                    android:startColor="#00A0A0"/>
            </shape>
        </clip>
    </item>
</layer-list>